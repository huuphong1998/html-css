                            .gem-item
                                img(src= val, alt="")
            section.diamond
                .container
                    h2.heading Hidden gems in Bangkok
                    .diamond-list
                        each val in ["https://plus.unsplash.com/premium_photo-1661963188068-1bac46e28727?w=900&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8YmFuZ2tva3xlbnwwfHwwfHx8MA%3D%3D", "https://images.unsplash.com/photo-1510379872535-9310dc6fd6a7?w=900&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NHx8YmFuZ2tva3xlbnwwfHwwfHx8MA%3D%3D", "https://images.unsplash.com/photo-1532079563951-0c8a7dacddb3?w=900&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTh8fGJhbmdrb2t8ZW58MHx8MHx8fDA%3D", "https://plus.unsplash.com/premium_photo-1661963804020-e93b8d27139e?w=900&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTd8fGJhbmdrb2t8ZW58MHx8MHx8fDA%3D"]
                            .diamond-item
                                .diamond-image
                                    img(src= val, alt="")
                                    .diamond-content
                                        h3.diamond-title Bangkok Trip
                                        span.diamond-subtitle 27 Sep, 2025
                    a.button.diamond-all(href="#") Explore All
