mixin tourItem(image, price, title, review, reviewCount, duration, tourPrice)
    .tour
        .tour-top
            img.tour-image(srcset=image, alt='bali')
            span.tour-price= price
        .tour-content
            h3.tour-title= title
            .tour-rating
                .tour-review
                    .tour-star
                        img(srcset='/images/star.png 2x' alt='tour-rating')
                    .tour-review-count
                        span= review
                        |  (#{reviewCount} reviews)
                span.tour-duration Duration: #{duration}
            a.tour-button(href='https://evondev.com' target='_blank' rel='noopener noreferrer') Tours Price $#{tourPrice}

mixin popularItem(image, time, title, review, reviewCount)
    .popular-item
        .popular-image
            .popular-overlay
            img.popular-img(src= image alt="unsplash")
            span.popular-label Must See
        .popular-content
            span.popular-time= time
            h3.popular-title= title
            .popular-review
                img(srcset="/images/star.png 2x" alt="star")
                span #{review} (#{reviewCount} reviews)